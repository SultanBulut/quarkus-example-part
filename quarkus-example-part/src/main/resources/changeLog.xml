<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="1" author="your_name">
        <createTable tableName="movie">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)"/>
            <column name="release_year" type="INT"/>
            <column name="director" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="your_name">
        <insert tableName="movie">
            <column name="title" value="Movie 1"/>
            <column name="release_year" value="2021"/>
            <column name="director" value="Director 1"/>
        </insert>
        <insert tableName="movie">
            <column name="title" value="Movie 2"/>
            <column name="release_year" value="2022"/>
            <column name="director" value="Director 2"/>
        </insert>
    </changeSet>

</databaseChangeLog>
