<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="1" author="sultan">
        <createTable tableName="movie">
            <column name="mov_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)"/>
            <column name="release_year" type="INT"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="sultan">
        <createTable tableName="actor">
            <column name="act_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="lastname" type="VARCHAR(255)"/>
            <column name="gender" type="VARCHAR(10)"/>
        </createTable>
    </changeSet>

    <changeSet id="3" author="sultan">
        <createTable tableName="director">
            <column name="dir_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="lastname" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="4" author="sultan">
        <insert tableName="movie">
            <column name="title" value="Movie 1"/>
            <column name="release_year" value="2021"/>
        </insert>
        <insert tableName="movie">
            <column name="title" value="Movie 2"/>
            <column name="release_year" value="2022"/>
        </insert>
    </changeSet>

    <changeSet id="5" author="sultan">
        <createTable tableName="movie_direction">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="mov_id" type="BIGINT"/>
            <column name="dir_id" type="BIGINT"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="movie_direction"
                                 baseColumnNames="mov_id"
                                 referencedTableName="movie"
                                 referencedColumnNames="mov_id"
                                 constraintName="fk_movie_dir_movie"/>
        <addForeignKeyConstraint baseTableName="movie_direction"
                                 baseColumnNames="dir_id"
                                 referencedTableName="director"
                                 referencedColumnNames="dir_id"
                                 constraintName="fk_movie_dir_director"/>
    </changeSet>

    <changeSet id="6" author="sultan">
        <createTable tableName="movie_cast">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="mov_id" type="BIGINT"/>
            <column name="act_id" type="BIGINT"/>
            <column name="role_name" type="VARCHAR(255)"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="movie_cast"
                                 baseColumnNames="mov_id"
                                 referencedTableName="movie"
                                 referencedColumnNames="mov_id"
                                 constraintName="fk_movie_cast_movie"/>
        <addForeignKeyConstraint baseTableName="movie_cast"
                                 baseColumnNames="act_id"
                                 referencedTableName="actor"
                                 referencedColumnNames="act_id"
                                 constraintName="fk_movie_cast_actor"/>
    </changeSet>

</databaseChangeLog>
